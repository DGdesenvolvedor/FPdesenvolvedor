  <div class="modal" id="generatorModal">
    <h3>Gerador de Prompt com IA</h3>
    <p class="small">Clique em "Gerar" para receber um prompt pronto. Copie e cole na sua IA preferida.</p>
    <div id="generatedPrompt" class="prompt-box" style="min-height:80px"></div>
    <div style="margin-top:10px;display:flex;gap:8px;">
      <button class="btn btn-primary" onclick="generatePrompt()">Gerar</button>
      <button class="btn btn-ghost" onclick="copyGenerated()">Copiar</button>
      <button class="btn" onclick="closeGenerator()">Fechar</button>
    </div>
  </div>

  <script>
    const UNLOCK_CODE = 'f73b8dee-1ef9-40c8-82c2-cf7f4b6c1352'; // código informado para demo
    const generateBtn = document.getElementById('generateBtn');
    const promptsSection = document.getElementById('promptsSection');

    function copyExample(){navigator.clipboard.writeText('Crie um site moderno e responsivo para vender cursos de emagrecimento, com cores suaves, linguagem motivacional e foco em conversão.').then(()=>alert('Prompt copiado!'))}
    function copyPix(){navigator.clipboard.writeText('54897827817').then(()=>alert('Chave Pix copiada!'))}

    function handlePaid(e){
      e.preventDefault();
      const name = document.getElementById('payerName').value || 'Cliente';
      const tx = document.getElementById('txInput').value.trim();
      if(tx===UNLOCK_CODE){
        // desbloqueio simulado
        alert('Pagamento verificado (modo demo). Biblioteca de prompts desbloqueada.');
        promptsSection.style.display='block';
        generateBtn.style.display='inline-block';
        // scroll to prompts
        setTimeout(()=>document.getElementById('promptsSection').scrollIntoView({behavior:'smooth'}),200);
      } else if(tx.length>0){
        alert('Comprovante enviado. Iremos verificar manualmente e desbloquear o acesso em seguida. (Nesta demo, use o código correto para desbloqueio automático).');
      } else {
        alert('Comprovante enviado. Iremos verificar manualmente.');
      }
      document.getElementById('paidForm').style.display='none';
    }

    // Generator logic
    const samplePrompts = [
      // marketing
      "Crie um vídeo de anúncio de 30s para um curso de marketing digital. Narração natural, texto dinâmico na tela com bullets, imagens de estoque sobre trabalho remoto e gráficos de crescimento. Tom motivacional, CTA: 'Inscreva-se agora'. Sem rosto.",
      "Roteiro de 60s para venda de curso avançado com 5 cenas: problema, desejo, solução, prova social, oferta limitada. Narração calma, trilha crescente, legendas animadas.",
      // produtos físicos
      "Anúncio 25s para gadget: close-ups do produto, uso em mãos, texto explicando 3 benefícios, música enérgica, CTA de compra. Sem rosto.",
      "Vídeo de 45s para lançamento de produto com demonstrações em estúdio, animações de features e depoimentos em texto na tela.",
      // emagrecimento
      "Vídeo 30s para programa de emagrecimento focado em transformação: imagens de lifestyle, dicas práticas, tom empático, CTA 'Comece hoje'. Sem rosto.",
      "Roteiro 60s com antes/depois ilustrativos, prova social em texto, garantia e oferta por tempo limitado. Narração confiante.",
      // ecommerce
      "Script 30s para loja virtual: mostrar produtos em uso, selo de confiança, checkout rápido e oferta de frete grátis. Texto na tela destacando preço e desconto.",
      "Anúncio 15s para remarketing: 'Seu produto está te esperando' + CTA com desconto. Urgência e clareza.",
      // infoprodutos / marca pessoal
      "Vídeo 40s para webinar: teaser, credenciais em texto, benefícios e CTA para inscrição. Tom autoritário e amigável. Sem rosto.",
      "Roteiro 30s para lançamento de ebook: destacar dor, promessa, bullets do conteúdo e CTA com link de compra. Use motion graphics.",
      // genérico
      "Crie um vídeo de anúncio curto (20-30s) para vender qualquer produto digital. Narração natural, texto na tela, imagens de banco, trilha envolvente e CTA claro para conversão. Não mostrar rosto."
    ];

    function openGenerator(){
      document.getElementById('overlay').classList.add('show');
      document.getElementById('generatorModal').classList.add('show');
    }
    function closeGenerator(){
      document.getElementById('overlay').classList.remove('show');
      document.getElementById('generatorModal').classList.remove('show');
    }
    function generatePrompt(){
      const p = samplePrompts[Math.floor(Math.random()*samplePrompts.length)];
      document.getElementById('generatedPrompt').textContent = p;
    }
    function copyGenerated(){
      const txt = document.getElementById('generatedPrompt').textContent;
      if(!txt) return alert('Gere um prompt primeiro.');
      navigator.clipboard.writeText(txt).then(()=>alert('Prompt copiado!'));
    }
  </script>
